# ============================== Filebeat inputs ===============================

# ------------------------------------------------------------------------------- #
# Simple Inputs to carry raw events to logstash. No transformation expected
# Just send the raw event to logstash
# All input configs are held in separate directory
# ------------------------------------------------------------------------------- #

# ============================== Filebeat inputs ===============================
filebeat.config.inputs:
  enabled: true
  path: inputs.d/zero_transformation/*.yml

# ============================== Filebeat Modules ===============================
filebeat.config.modules:
  enabled: true
  path: modules.d/zero_transformation/*.yml

# ============================== Filebeat outputs ===============================
# Send Beats based syslog output to different Port like 5000
output.logstash:
  hosts: ["localhost:5000"]
